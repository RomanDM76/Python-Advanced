print('Задание 6')

with open('test_file.txt', 'wt', encoding='utf-16') as f:
  f.write('сетевое программирование')
  f.write('\n')
  f.write('сокет')
  f.write('\n')
  f.write('декоратор')
  f.write('\n')

detector = UniversalDetector()
with open('test_file.txt', 'rb') as fh:
    for line in fh:
        detector.feed(line)
        if detector.done:
            break
    detector.close()
print(detector.result)
print()

